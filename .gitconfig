[core]
	excludesfile = ~/global.gitignore
	editor = vim
        #  autocrlf = false means that it never touches line endings
	autocrlf = false
[color]
	ui = auto
[alias]
	l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
	unstage = reset HEAD --
	undo-last-commit = reset --soft HEAD~1
	commit = commit -v
[difftool]
	prompt = false
[push]
	default = current
[init]
	defaultBranch = main
[pull]
	rebase = false
[rerere]
	enabled = true
[diff "rspec"]
    # see https://gist.github.com/tekin/12500956bd56784728e490d8cef9cb81#file-gitconfig
    xfuncname = "^[ \t]*((RSpec|describe|context|it|before|after|around|feature|scenario)[ \t].*)$"
